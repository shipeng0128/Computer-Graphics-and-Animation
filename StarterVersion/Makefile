CC = c++
FLAGS = -Wall

#-----------------------------------------
#Optimization ----------------------------
OPT = -O2 -g

#-----------------------------------------
#-----------------------------------------

TARGETS = trace
OBJECTS = trace.o slVector.o

#-----------------------------------------
# 
INCS =
LIBS =

CCOPTS = $(OPT) $(FLAGS) $(INCS)  
LDOPTS = $(OPT) $(LIBS)

#-----------------------------------------
#-----------------------------------------

default: $(TARGETS) 

clean:
	/bin/rm -fv *.o $(TARGETS) 

#-----------------------------------------
#-----------------------------------------

trace: $(OBJECTS) trace.H
	$(CC) $(LDOPTS) -o trace $(OBJECTS)


#-----------------------------------------

trace.o: trace.cpp trace.H slIO.H slVector.H

.cpp.o: 
	$(CC) $(CCOPTS) -c $< -o $@

#-----------------------------------------
#-----------------------------------------
